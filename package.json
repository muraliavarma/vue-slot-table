{
  "name": "vue-slottable",
  "version": "1.3.1",
  "description": "A flexible, slot-based Vue 3 table component with sticky columns, column groups, and scoped slots for custom cell rendering.",
  "type": "module",
  "main": "./dist/vue-slottable.umd.cjs",
  "module": "./dist/vue-slottable.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue-slottable.js",
      "require": "./dist/vue-slottable.umd.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --mode lib && vue-tsc -p tsconfig.build.json",
    "typecheck": "vue-tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.27.0",
    "jsdom": "^24.1.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vitest": "^3.2.4",
    "vue": "^3.4.0",
    "vue-tsc": "^3.2.4"
  },
  "keywords": [
    "vue",
    "vue3",
    "table",
    "slot-table",
    "slots",
    "scoped-slots",
    "sticky-columns",
    "column-groups",
    "data-table",
    "component"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muraliavarma/vue-slot-table.git"
  },
  "homepage": "https://github.com/muraliavarma/vue-slot-table#readme",
  "bugs": {
    "url": "https://github.com/muraliavarma/vue-slot-table/issues"
  }
}
